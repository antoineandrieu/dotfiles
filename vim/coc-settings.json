{
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "javascript",
    "javascriptreact",
    "shell",
    "typescript",
    "typescript.tsx",
    "typescriptreact",
    "python",
    "json",
    "grahql",
    "solidity",
    "rust",
    "toml"
  ],
  "coc.preferences.formatOnType": true,
  "coc.preferences.willSaveHandlerTimeout": 10000,
  "suggest.enablePreselect": false,
  "suggest.noselect": true,
  "eslint.format.enable": true,
  "prettier.autoFixOnSave": true,
  "javascript.suggestionActions.enabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/usr/local/bin/black",
  "python.jediEnabled": true,
  "python.linting.pylintEnabled": false,
  "python.sortImports.path": "/usr/local/bin/isort",
  "python.jediPath": "/home/antoine/.local/lib/python3.8/site-packages",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "solidity": {
      "command": "solidity-language-server",
      "args": ["--stdio"],
      "filetypes": ["solidity"],
      "ignoredRootPaths": ["~"]
    }
  },
  "svelte.enable-ts-plugin": true
}
